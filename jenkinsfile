pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                echo 'Checkout from source...'
                checkout scm
            }
        }
        stage('WebApp Build') {
            steps {
                dir('angular-app')
                echo 'Installing npm packages...'
                bat 'npm install'
                echo 'Ng Build...'
                bat 'ng build'
            }
        }
        stage('DotNet Build') {
            steps {
                dir('driverapi')
                bat 'dotnet build'
            }
        }
    }
}